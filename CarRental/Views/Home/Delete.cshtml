@model CarRental.Models.Car
@{
    ViewData["Title"] = "Удаление автомобиля";
}
<h2>@ViewBag.Title</h2>
<div>
    <dl class="dl-horizontal">
        <dt>Марка</dt>
        <dd>
            @Model.Brand
        </dd>

        <dt>Тип кузова</dt>
        <dd>
            @Model.BodyType
        </dd>
        <dt>Модельный год</dt>
        <dd>
            @Model.ModelYear
        </dd>
        <dt>Стоимость аренды</dt>
        <dd>
            @Model.RentPrice
        </dd>
        <dt>Стоимость залога</dt>
        <dd>
            @Model.CollateralValue
        </dd>
    </dl>

    <div>
        <form asp-controller="Home" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>